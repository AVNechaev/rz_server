{deps_dir, [deps]}.
{erl_opts,
  [
    {i, "./include"},
    {i, "./src/hrl"}
  ]}.

{pre_hooks,
  [
    {compile, "erl -run leex file \"src/patterns_lex.xrl\" -run init stop"},
    {compile, "erl -run yecc file \"src/patterns_parser.yrl\" -run init stop"}
  ]
}.
{deps,
  [
    {lager, ".*", {git, "https://github.com/basho/lager.git", "2.0.1"}},
    {iqfeed_client, ".*", {git, "ssh://git@bitbucket.org:AVNechaev/iqfeed_client.git", "master"}},
    {erlmc, ".*", {git, "https://github.com/jkvor/erlmc", "master"}},
    {emysql, ".*", {git, "https://github.com/Eonblast/Emysql", "master"}}
  ]}.

{sub_dirs, ["rel"]}.
